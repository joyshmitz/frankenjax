{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://frankenjax.dev/schemas/perf_delta.v1.schema.json",
  "title": "FrankenJAX Performance Delta v1",
  "description": "Criterion benchmark comparison report with per-benchmark p95 regression gate.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at_unix_ms",
    "baseline_id",
    "candidate_id",
    "regression_threshold_percent",
    "benchmarks",
    "regressions",
    "overall_status"
  ],
  "properties": {
    "schema_version": {
      "const": "frankenjax.perf-delta.v1"
    },
    "generated_at_unix_ms": {
      "type": "integer",
      "minimum": 0
    },
    "baseline_id": {
      "type": "string",
      "description": "Git commit SHA or tag identifying the baseline benchmark run.",
      "minLength": 1
    },
    "candidate_id": {
      "type": "string",
      "description": "Git commit SHA or tag identifying the candidate benchmark run.",
      "minLength": 1
    },
    "regression_threshold_percent": {
      "type": "number",
      "description": "Maximum allowed p95 regression percentage before gate fails.",
      "minimum": 0,
      "exclusiveMaximum": 100
    },
    "benchmarks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "bench_id",
          "group",
          "baseline_p95_ns",
          "candidate_p95_ns",
          "delta_percent",
          "status"
        ],
        "properties": {
          "bench_id": {
            "type": "string",
            "description": "Criterion benchmark name (group/function).",
            "minLength": 1
          },
          "group": {
            "type": "string",
            "description": "Benchmark group (e.g. dispatch_latency, eval_jaxpr_throughput).",
            "minLength": 1
          },
          "baseline_p95_ns": {
            "type": "number",
            "description": "Baseline p95 time in nanoseconds.",
            "minimum": 0
          },
          "candidate_p95_ns": {
            "type": "number",
            "description": "Candidate p95 time in nanoseconds.",
            "minimum": 0
          },
          "delta_percent": {
            "type": "number",
            "description": "Percentage change ((candidate - baseline) / baseline * 100). Positive = slower."
          },
          "status": {
            "type": "string",
            "enum": ["pass", "regressed", "improved", "risk_noted"]
          },
          "risk_note_ref": {
            "type": "string",
            "description": "Path to risk note justifying an accepted regression.",
            "minLength": 1
          }
        }
      }
    },
    "regressions": {
      "type": "array",
      "description": "Subset of benchmarks that exceeded the regression threshold.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["bench_id", "delta_percent", "justified"],
        "properties": {
          "bench_id": {
            "type": "string",
            "minLength": 1
          },
          "delta_percent": {
            "type": "number"
          },
          "justified": {
            "type": "boolean",
            "description": "True if a risk_note_ref is provided for this regression."
          },
          "risk_note_ref": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "overall_status": {
      "type": "string",
      "enum": ["pass", "fail"]
    }
  }
}
